<%= form_for @idea, :html => {:multipart => true} do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>
      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :título %><br>
    <%= f.text_field :título %>
  </div>
  <div class="field">
    <%= f.label :foto %><br>
    <%= f.file_field :foto %>
  </div>
  <div class="field">
    <%= f.label :región %><br>
    <%= f.select :región, [ ['Amazonia', 'Amazonia'],
  ['Andina', 'Andina'],['Caribe', 'Caribe'],
['Insular', 'Insular'],['Orinoquía', 'Orinoquía'],['Pacífico', 'Pacífico'] ],
:selected => 'Insular'%>
  </div>
  <div class="field">
    <%= f.label :ingredientes %><br>
    <%= f.text_area :ingredientes %>
  </div>
  <div class="field">
    <%= f.label :preparación %><br>
    <%= f.text_area :preparación %>
  </div>
  <div class="actions">
    <%= f.submit"agregar receta" %>
  </div>
<% end %>
