<h1>Todas las recetas</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Foto</th>
      <th>Región</th>
      <th>Ingredientes</th>
      <th>Preparación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.título %></td>
        <td><%= image_tag idea.foto_url(:thumb) if idea.foto? %></td>
        <td><%= idea.región %></td>
        <td><%= idea.ingredientes %></td>
        <td><%= idea.preparación %></td>
        <td><%= link_to 'Show', idea %></td>
        <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar receta', new_idea_path %>
